@model IEnumerable<ResourceIT.Domain.Detalhe>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-10 col-md-offset-1" style="margin-top: 5%; padding-bottom:1.5%; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">

    <div style="text-align: center; background-image: linear-gradient(to right, #85d8ed , #0e77a8); padding-top:0%; height:60px;">

        <div style="position: relative; top: 30%">
            <h3>Detalhes</h3>
        </div>

    </div>

    <br />

    <div style="text-align:right">
        <a href="@Url.Action("Inclusao", "Detalhes")" class="btn btn-success">
            Inclusao
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </div>

    <br />

    <div class="row">
        <div class="col-md-4" style="text-align: left">
            <strong>@Html.DisplayNameFor(model => model.Telefone)</strong>
        </div>
        <div class="col-md-4" style="text-align: left">
            <strong>@Html.DisplayNameFor(model => model.Endereco)</strong>
        </div>
    </div>

    <div style="text-align: center; background-color: #f2f2f2;">

        @foreach (var item in Model)
        {
        <div class="row" style="">
            <div class="col-md-4" style="text-align: left;padding-top: 1%;">
                @Html.DisplayFor(modelItem => item.Telefone)
            </div>
            <div class="col-md-4" style="text-align: left; padding-top: 1%;">
                @Html.DisplayFor(modelItem => item.Endereco)
            </div>
            <div class="col-md-4" style="text-align: right">
                <a href="@Url.Action("Detalhes", "Detalhes", new { id = item.Id })" class="btn btn-info">
                    Detalhes
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Alteracao", "Detalhes", new { id = item.Id })" class="btn btn-info">
                    Alterar
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Exclusao", "Detalhes", new { id = item.Id })" class="btn btn-info">
                    Excluir
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </div>
            <hr />
        </div>
        }


    </div>

</div>

