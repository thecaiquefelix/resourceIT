@model ResourceIT.Domain.Detalhe

@{
    ViewBag.Title = "Inclusao";
}

<script>

    function SuccessMessage() {
        swal(
            'Sucesso!',
            'Detalhe cadastrado com sucesso!',
            'success'
        )
        window.location.href = '/detalhes/index';
    }
    function FailMessage() {
        swal({
            type: 'error',
            title: 'Oops...',
            text: 'Aconteceu algum problema!',
        })
    }
</script>

<style>
    input, select, textarea {
        max-width: 1200px;
    }
</style>

@using (Ajax.BeginForm("Inclusao", "Detalhes", null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "SuccessMessage",
    OnFailure = "FailMessage",
}, new { id = "formInclusao" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-10 col-md-offset-1" style="margin-top: 5%; padding-bottom:1.5%; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">

        <div style="text-align: center; background-image: linear-gradient(to right, #85d8ed , #0e77a8); padding-top:0%; height:60px;">

            <div style="position: relative; top: 30%">
                <h3>Inclusao Detalhes</h3>
            </div>

        </div>

        <br />

        <div style="text-align: center; background-color: #f2f2f2;">

            <div class="row">
                <div class="col-md-8" style="text-align: left">
                    <strong>Telefone</strong>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12" style="text-align: left">
                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-8" style="text-align: left">
                    <strong>Endereco</strong>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12" style="text-align: left">
                    @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="col-md-12" style="text-align: right; padding-right: 0%;">

                <a href="@Url.Action("Index", "Detalhes")" class="btn btn-default" style="background-image: linear-gradient(to right, #85d8ed, #0e77a8); width:150px;">
                    Voltar para lista
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>

                <input type="submit" value="Incluir" class="btn btn-default" style="background-image: linear-gradient(to right, #85d8ed, #0e77a8); width:150px;" />
            </div>

        </div>

    </div>

}

<script src="~/Scripts/mask.js"></script>

<script>
    $('#Telefone').mask('(00) 0000-0000');
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
